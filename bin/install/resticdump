#!/bin/bash
set -eu

## Variables
export TIMESTAMP=$(date +%Y%m%d_%H%M)

cd /var/www/database
rm -rf dbdump-*.sql.gz
mariadb-dump -u root --all-databases | gzip -c >  dbdump-$TIMESTAMP.sql.gz
echo "ðŸ“¦ mariadb-dump -> dbdump-$TIMESTAMP.sql.gz"
rm -rf latest.sql.gz
ln -s dbdump-$TIMESTAMP.sql.gz latest.sql.gz 
