#! /bin/bash
# @author: Denis Martin-Bruillot

set -eu
source .env

# export d="<DOMAIN>"
echo "‚öôÔ∏è Setup ./ngnix/conf.d/default.conf with ${DOMAIN}..."
echo -e "
\033[32müõ†Ô∏è NGNIX | Init \033[0m
see  ./ngnix/conf.d/default.conf...\033[0m"

## NGNIX SSL Folder Structure
mkdir -p ./ngnix/conf.d/ssl/certs
mkdir -p ./ngnix/conf.d/ssl/private

## Config
rm -rf ./ngnix/conf.d/default.conf
cp -pr ./ngnix/conf.d/default.conf.template ./ngnix/conf.d/default.conf

sed -i.bak 's#<DOMAIN>#'"${DOMAIN}"'#g; s#<HTMLPATH>#'"${HTML_SITE_PATH}"'#g' ./ngnix/conf.d/default.conf
rm -rf ./ngnix/conf.d/default.conf.bak

echo -e "
    .../conf.d/default.conf > <DOMAIN> Replaced by ${DOMAIN}
    .../conf.d/default.conf > <HTML_SITE_PATH> Replaced by ${HTML_SITE_PATH}

\033[32m‚úÖ  NGNIX | DONE ./ngnix/conf.d/default.conf\033[0m
"
